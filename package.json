{
	"name": "c2-shop",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "npx nodemon -q -x babel-node -r dotenv/config ./src/index.js dotenv_config_path=./.env",
		"build": "babel ./src -d ./build",
		"lint": "eslint --fix 'src/**/*.js'",
		"pretty": "prettier --write 'src/**/*.js'"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.11",
		"mongoose-delete": "^0.5.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.8",
		"@babel/core": "^7.16.7",
		"@babel/node": "^7.16.8",
		"@babel/plugin-transform-runtime": "^7.16.10",
		"@babel/preset-env": "^7.16.8",
		"babel-plugin-module-resolver": "^4.1.0",
		"colors": "^1.4.0",
		"dotenv": "^10.0.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.2.0",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.7",
		"prettier": "^2.4.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"yarn pretty"
		]
	}
}
